<div class="ma__listing-table">
  <div class="ma__listing-table__container">
    <table>
      {% for row in listingTable.rows %}
        <tr>
          <th scope="row">{{ row.label }}</th>
          {% if row.text %}
            <td class="ma__rich-text">{{ row.text|raw }}</td>
          {% endif %}
          {% if row.accordionContent %}
            <td class="ma__rich-text">
              {% set accordionContent = row.accordionContent %}
              {% include "@molecules/accordion-content.twig" %}
            </td>
          {% endif %}
        </tr>
      {% endfor %}
    </table>
  </div>
</div>
